      "core-js": false,
      "keccak": false,
      "secp256k1": false,
      "web3": false,
      "bufferutil": false,
      "utf-8-validate": false,
      "core-js-pure": false,
      "postinstall-postinstall": false,
      "husky": false
    }
  },
  "devDependencies": {
    "@lavamoat/allow-scripts": "^2.3.0",
    "prettier-plugin-solidity": "^1.1.1",
